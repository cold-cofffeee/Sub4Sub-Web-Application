# ============================================
# SUB4SUB v2.0 - Environment Configuration
# Professional YouTube Subscription Exchange
# ============================================
# Copy this file to .env and configure with your credentials

# ------------------
# Database Settings
# ------------------
DB_HOST=localhost
DB_NAME=sub4sub
DB_USER=root
DB_PASS=

# ------------------
# Application Settings
# ------------------
APP_NAME="SUB4SUB"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost/sub4sub

# ------------------
# Admin Panel Access
# ------------------
# IMPORTANT: Change these default credentials in production!
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# ------------------
# Email Configuration
# ------------------
# OPTIONAL: Email notifications are completely optional
# Leave empty to disable email features (app will work fine without SMTP)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM_EMAIL=noreply@sub4sub.com
SMTP_FROM_NAME="SUB4SUB"

# To enable email, uncomment and configure:
# SMTP_HOST=smtp.gmail.com
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# ------------------
# Payment Gateway Configuration
# ------------------
# OPTIONAL: Leave empty to use demo mode for testing
# Configure these to enable real payment processing

# Stripe (Credit Card Payments)
STRIPE_SECRET_KEY=
STRIPE_PUBLIC_KEY=
# To enable Stripe: STRIPE_SECRET_KEY=sk_test_your_key_here

# PayPal
PAYPAL_CLIENT_ID=
PAYPAL_SECRET=
# To enable PayPal: PAYPAL_CLIENT_ID=your_client_id_here

# ------------------
# Security Keys
# ------------------
# Generate random strings for production
JWT_SECRET=your-random-jwt-secret-key-change-in-production
ENCRYPTION_KEY=your-random-encryption-key-change-in-production

# ------------------
# Feature Flags
# ------------------
ENABLE_REGISTRATION=true
MAINTENANCE_MODE=false
FREE_DAILY_LIMIT=10
